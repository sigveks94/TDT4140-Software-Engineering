<?xml version="1.0" encoding="UTF-8"?>

<web-app
xmlns="http://xmlns.jcp.org/xml/ns/javaee"
   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
   xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
   metadata-complete="false"
   version="3.1">
   
	<display-name>Java Servlet</display-name>
	
	<!-- Servlets -->
	<servlet>
		<servlet-name>PatientServlet</servlet-name>
		<servlet-class>tdt4140.gr1814.webserver.PatientServlet</servlet-class>
	</servlet>
	
	<servlet>
		<servlet-name>ZoneServlet</servlet-name>
		<servlet-class>tdt4140.gr1814.webserver.ZoneServlet</servlet-class>
	</servlet>
	
	<servlet>
		<servlet-name>LoginServlet</servlet-name>
		<servlet-class>tdt4140.gr1814.webserver.LoginServlet</servlet-class>
	</servlet>
	
	<servlet>
		<servlet-name>CaretakerServlet</servlet-name>
		<servlet-class>tdt4140.gr1814.webserver.CaretakerServlet</servlet-class>
	</servlet>
	
	
	<!-- Mappings -->
	<servlet-mapping>
		<servlet-name>PatientServlet</servlet-name>
		<url-pattern>/patient/*</url-pattern>
	</servlet-mapping>
	
	<servlet-mapping>
		<servlet-name>ZoneServlet</servlet-name>
		<url-pattern>/zone/*</url-pattern>
	</servlet-mapping>
	
	<servlet-mapping>
		<servlet-name>LoginServlet</servlet-name>
		<url-pattern>/login/*</url-pattern>
	</servlet-mapping>
	
	<servlet-mapping>
		<servlet-name>CaretakerServlet</servlet-name>
		<url-pattern>/caretaker/*</url-pattern>
	</servlet-mapping>
	
</web-app>
